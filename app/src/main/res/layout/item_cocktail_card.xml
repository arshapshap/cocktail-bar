<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/cocktail_card_size"
    android:layout_height="@dimen/cocktail_card_size"
    android:layout_margin="6dp"
    app:cardCornerRadius="54dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        android:src="@drawable/img_summer_holidays" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:padding="4dp"
        android:background="@drawable/shape_radius80"
        android:textAppearance="@style/Text.OnCard"
        tools:text="Pink Limonade" />

</androidx.cardview.widget.CardView>