<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">@font/didact_gothic</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.OnButton">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.OnCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subnormal">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">56dp</item>
        <item name="boxCornerRadiusTopEnd">56dp</item>
        <item name="boxCornerRadiusBottomStart">56dp</item>
        <item name="boxCornerRadiusBottomEnd">56dp</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextTextAppearance">@style/Text.Hint</item>
        <item name="helperTextTextColor">@color/gray_500</item>
        <item name="hintTextAppearance">@style/Text.Hint</item>
        <item name="hintTextColor">@color/gray_500</item>
        <item name="placeholderTextAppearance">@style/Text.Normal</item>
    </style>
</resources>